@model PaginationMetadata

<div class="d-flex justify-content-center my-3">
    <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm">
            <!-- Nút "Đầu" -->
            <li class="page-item @(Model.CurrentPageIndex == 1 ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="toogleParameterUrl('pageIndex', 1)" aria-label="First">
                    &laquo;&laquo;
                </a>
            </li>

            <!-- Nút "Prev" -->
            <li class="page-item @(Model.CurrentPageIndex == 1 ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="toogleParameterUrl('pageIndex', @(Model.CurrentPageIndex - 1))" aria-label="Previous">
                    &laquo;
                </a>
            </li>

            <!-- Hiển thị các trang xung quanh trang hiện tại -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == 1 || i == Model.TotalPages || (i >= Model.CurrentPageIndex - 1 && i <= Model.CurrentPageIndex + 1))
                {
                    <li class="page-item @(i == Model.CurrentPageIndex ? "active" : "")">
                        <a class="page-link" href="javascript:void(0)" onclick="toogleParameterUrl('pageIndex', @i)">@i</a>
                    </li>
                }
                else if (i == Model.CurrentPageIndex - 2 || i == Model.CurrentPageIndex + 2)
                {
                    <li class="page-item disabled">
                        <span class="page-link">...</span>
                    </li>
                }
            }

            <!-- Nút "Next" -->
            <li class="page-item @(Model.CurrentPageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="toogleParameterUrl('pageIndex', @(Model.CurrentPageIndex + 1))" aria-label="Next">
                    &raquo;
                </a>
            </li>

            <!-- Nút "Cuối" -->
            <li class="page-item @(Model.CurrentPageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="toogleParameterUrl('pageIndex', @Model.TotalPages)" aria-label="Last">
                    &raquo;&raquo;
                </a>
            </li>
        </ul>
    </nav>
</div>