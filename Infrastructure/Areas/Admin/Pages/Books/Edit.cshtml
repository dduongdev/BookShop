@page
@model Areas.Admin.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit Book";
}

<h1>@ViewData["Title"]</h1>

<!-- Form chỉnh sửa sách -->
<form method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Book.Title" required />
    </div>
    <div class="form-group">
        <label for="Author">Author</label>
        <input type="text" class="form-control" id="Author" name="Author" value="@Model.Book.Author" required />
    </div>
    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" id="Status" name="Status">
            <option value="Active" @(Model.Book.Status == Entities.Enums.EntityStatus.Active ? "selected" : "")>Active</option>
            <option value="Suspended" @(Model.Book.Status == Entities.Enums.EntityStatus.Suspended ? "selected" : "")>Suspended</option>
        </select>
    </div>

    <!-- Nút lưu -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Page("/Books/Index")" class="btn btn-secondary">Back</a>
</form>
