@page
@model Areas.Admin.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Name">Category Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Category.Name" required />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" id="Status" name="Status">
            <option value="Active" @(Model.Category.Status == Entities.Enums.EntityStatus.Active ? "selected" : "")>Active</option>
            <option value="Suspended" @(Model.Category.Status == Entities.Enums.EntityStatus.Suspended ? "selected" : "")>Suspended</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Page("/Categories/Index")" class="btn btn-secondary">Back</a>
</form>
